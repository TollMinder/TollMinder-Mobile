<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="30dp"
    android:orientation="horizontal">
    <mvvmcross.binding.droid.views.MvxImageView
        android:id="@+id/icon_board_view"
        android:layout_marginTop="3dp"
        android:layout_width="20dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        tools:src="@drawable/ic_nearest_point" />
    <TextView
        android:id="@+id/label_board_view"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="roboto"
        android:layout_marginRight="5dp"
        tools:text="Distance to nearest point:"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/text_board_view"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="roboto"
        tools:text="Press tracking button"
        android:textColor="#015e4c" />
</LinearLayout>