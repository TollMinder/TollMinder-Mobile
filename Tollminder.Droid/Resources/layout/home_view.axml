<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background"
    android:id="@+id/home_view"
    android:orientation="vertical"
    android:weightSum="1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:id="@+id/logo_container"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/home_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="47dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_weight="0.82">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home_board"
            android:id="@+id/imageView_board"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="15dp"
            android:visibility="gone"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/button_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:orientation="horizontal"
            android:layout_margin="15dp"
            android:background="@drawable/home_board_new"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <tollminder.droid.controls.RoundedRectangleButton
                android:layout_width="0dp"
                android:layout_height="95dp"
                android:layout_weight="1"
                android:id="@+id/button_pay_history"
                app:MvxBind="Click PayHistoryCommand"
                app:image="@drawable/ic_home_pay_history"
                app:text="Pay History"/>

            <tollminder.droid.controls.RoundedRectangleButton
                android:layout_width="0dp"
                android:layout_height="95dp"
                android:layout_weight="1"
                android:id="@+id/button_pay"
                app:MvxBind="Click PayCommand"
                app:image="@drawable/ic_home_pay"
                app:text="Pay" />

            <tollminder.droid.controls.RoundedRectangleButton
                android:layout_width="0dp"
                android:layout_height="95dp"
                android:layout_weight="1"
                android:id="@+id/button_profile"
                app:MvxBind="Click ProfileCommand"
                app:image="@drawable/ic_home_profile"
                app:text="Profile" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="182dp"
        android:layout_alignParentBottom="true">
        <tollminder.droid.controls.RoundedRectangleButton
            android:id="@+id/button_tracking"
            android:layout_width="@dimen/home_button_tracking"
            android:layout_height="@dimen/home_button_tracking"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="60dp"
            tools:background="@drawable/home_view_tracking_button"
            app:MvxBind="Click TrackingCommand; ImageUrl BoolToIconConverter(IsBound, 'ic_home_tracking'); Text TrackingText"
            app:image="@drawable/ic_home_tracking_default" />
    </RelativeLayout>
</LinearLayout>
